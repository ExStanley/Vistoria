<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vistoria.Apresentacao.Questao"
             Title="Questão">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Código:"/>
            <Entry x:Name="codigo" Placeholder="Ex: P501"/>
            <Label Text="Questão:"/>
            <Entry x:Name="pergunta" Placeholder="Ex: A pintura e nova?"/>
            <Button Text="Gravar" Clicked="GravarQuestao"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>